@model ECommerceApp.Models.Product

<h2>Add Product</h2>

<form asp-action="Create" method="post">
    <div class="form-group mb-2">
        <label>Name</label>
        <input asp-for="Name" class="form-control" required />
    </div>
    <div class="form-group mb-2">
        <label>Description</label>
        <input asp-for="Description" class="form-control" required />
    </div>
    <div class="form-group mb-2">
        <label>Price</label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" required />
    </div>
    <div class="form-group mb-2">
        <label>Stock</label>
        <input asp-for="Stock" class="form-control" type="number" required />
    </div>
    <div class="form-group mb-2">
        <label>Category</label>
        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories">
            <option value="">-- Select category --</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Create</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Back</a>
</form>
