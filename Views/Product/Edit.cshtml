@model ECommerceApp.Models.Product

<h2>Edit Product</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group mb-2">
        <label>Name</label>
        <input asp-for="Name" class="form-control" required />
    </div>
    <div class="form-group mb-2">
        <label>Description</label>
        <input asp-for="Description" class="form-control" required />
    </div>
    <div class="form-group mb-2">
        <label>Price</label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" required />
    </div>
    <div class="form-group mb-2">
        <label>Stock</label>
        <input asp-for="Stock" class="form-control" type="number" required />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Save</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Back</a>
</form>
