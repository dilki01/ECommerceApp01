@model List<ECommerceApp.Models.Category>

<h2>Categories</h2>
<a asp-action="Create" class="btn btn-success mb-3">Add Category</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th style="width:180px">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@c.Id" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@c.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
